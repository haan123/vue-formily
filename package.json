{
  "name": "vue-formily",
  "version": "1.0.0-alpha.1",
  "private": true,
  "description": "Simple, lightweight, flexible schema based form for Vue.js",
  "author": "An Ha <haan.an@yahoo.com.vn>",
  "license": "MIT",
  "module": "esm/index.js",
  "unpkg": "dist/vue-formily.js",
  "main": "dist/vue-formily.js",
  "types": "dist/vue-formily.d.ts",
  "homepage": "https://github.com/haan123/vue-formily",
  "repository": "https://github.com/haan123/vue-formily",
  "sideEffects": false,
  "keywords": [
    "VueJS",
    "Vue",
    "validation",
    "validator",
    "inputs",
    "form",
    "dynamic form",
    "form schema"
  ],
  "files": [
    "dist",
    "esm"
  ],
  "scripts": {
    "test": "NODE_ENV=test jest",
    "cover": "jest --coverage",
    "build": "node scripts/build.js",
    "lint": "eslint . '**/*.{js,jsx,ts,tsx}' --fix",
    "format": "prettier \"./**/*.ts\" --write"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/preset-env": "^7.12.7",
    "@types/jest": "^26.0.16",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "@vue/test-utils": "^1.2.0",
    "chalk": "^4.1.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "eslint-plugin-vue": "^7.9.0",
    "filesize": "^6.1.0",
    "flush-promises": "^1.0.2",
    "fs-extra": "^9.0.1",
    "gzip-size": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rollup": "^2.34.2",
    "rollup-plugin-dts": "^2.0.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "shelljs": "^0.8.4",
    "terser": "^5.5.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.12"
  },
  "peerDependencies": {
    "vue": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ],
    "*.js": [
      "eslint --fix",
      "jest --maxWorkers=1 --bail --findRelatedTests"
    ]
  }
}
